<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_purple"
    android:orientation="vertical"
    android:padding="24dp"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">

    <FrameLayout
        android:id="@+id/framelayout_wild"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:orientation="vertical">


        <androidx.cardview.widget.CardView
            android:id="@+id/cardview_wild"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="#C3996B"
            app:cardCornerRadius="@dimen/type_corner_radius">

            <ImageView
                android:id="@+id/image_wild"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_margin="@dimen/type_margin"
                android:contentDescription="@string/des_wild_animals"
                app:srcCompat="@drawable/icon_06" />

            <TextView
                android:id="@+id/txt_title_wild"
                style="@style/type_title_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|center_vertical"
                android:layout_marginStart="@dimen/title_type_margin"
                android:text="@string/txt_wild_animals" />
        </androidx.cardview.widget.CardView>

    </FrameLayout>

    <FrameLayout
        android:id="@+id/framelayout_sea"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:clickable="true">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="#3AC4E8"
            app:cardCornerRadius="@dimen/type_corner_radius">

            <ImageView
                android:id="@+id/image_sea"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_margin="@dimen/type_margin"
                android:contentDescription="@string/des_sea_animals"
                app:srcCompat="@drawable/icon_13" />

            <TextView
                android:id="@+id/txt_titile_sea"
                style="@style/type_title_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|center_vertical"
                android:layout_marginStart="@dimen/title_type_margin"
                android:text="@string/sea_animals" />
        </androidx.cardview.widget.CardView>
    </FrameLayout>

    <FrameLayout
        android:id="@+id/framelayout_farm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:clickable="true">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="#00CC99"
            app:cardCornerRadius="@dimen/type_corner_radius">

            <ImageView
                android:id="@+id/image_farm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_margin="@dimen/type_margin"
                android:contentDescription="@string/des_farm_animals"
                app:srcCompat="@drawable/icon_04" />

            <TextView
                android:id="@+id/txt_titile_farm"
                style="@style/type_title_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|center_vertical"
                android:layout_marginStart="@dimen/title_type_margin"
                android:text="@string/farm_animals" />
        </androidx.cardview.widget.CardView>

    </FrameLayout>


</LinearLayout>